<Window x:Class="PainterWPF.Dialogs.IODialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PainterWPF.Dialogs"
        mc:Ignorable="d"
        Title="IODialog" Height="130" Width="300" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="74*"/>
            <ColumnDefinition Width="74*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="buttonSave" Content="Save" Grid.ColumnSpan="2" Margin="3"/>
        <Button x:Name="buttonLoad" Content="Load" Grid.ColumnSpan="2" Grid.Row="1" Margin="3"/>
        <Button x:Name="buttonOK" Content="OK" Grid.Column="1" Grid.Row="3" Click="buttonOK_Click" Margin="3,0,3,10"/>

    </Grid>
</Window>
