<UserControl x:Class="PainterWPF.UserControls.Menu.ToolBarVector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PainterWPF.UserControls.Menu"
             mc:Ignorable="d" d:DesignWidth="571.763" Height="23.517">
    <ToolBar Focusable="False" x:Name="toolBar">
        <Button Focusable="False" x:Name="ToolBarItem_Color" Content="Color" ScrollViewer.VerticalScrollBarVisibility="Disabled"/>
        <Button Focusable="False" x:Name="ToolBarItem_PenWidth" Content="Pen Width"/>
        <Button Focusable="False" x:Name="ToolBarItem_ShapeType" Content="Shape Type"/>
        <Button Focusable="False" x:Name="ToolBarItem_SaveLoad" Content="Save / Load" Click="ToolBarItem_SaveLoad_Click"/>
    </ToolBar>
</UserControl>
