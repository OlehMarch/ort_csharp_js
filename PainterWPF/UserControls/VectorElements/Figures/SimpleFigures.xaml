<UserControl x:Class="PainterWPF.UserControls.VectorElements.Figures.SimpleFigures"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PainterWPF.UserControls.VectorElements.Figures"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Canvas x:Name="canvas" Focusable="True" Background="Transparent" MouseMove="canvas_MouseMove" 
            SizeChanged="canvas_SizeChanged" MouseDown="canvas_MouseDown" 
            MouseUp="canvas_MouseUp" PreviewKeyDown="canvas_KeyDown">
        <Canvas.ContextMenu>
            <ContextMenu>
                <MenuItem x:Name="ContextMenu_Color" Header="Color"/>
                <MenuItem x:Name="ContextMenu_PenWidth" Header="Pen Width"/>
                <MenuItem x:Name="ContextMenu_ShapeType" Header="Shape Type"/>
            </ContextMenu>
        </Canvas.ContextMenu>
    </Canvas>

</UserControl>
